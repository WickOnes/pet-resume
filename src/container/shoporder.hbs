<main>
    <section>
        <h2>{{header}}</h2>
        <div class="row">
            {{#with contacts_data}}
            <div class="col-8 mt-5">
                <h3>{{title}}</h3>
                <div>
                    {{#each buttons}}
                    {{#if isPrimary}}
                    <button class="btn btn-warning">{{text}}</button>
                    {{else}}
                    <button class="btn btn-outline-warning">{{text}}</button>
                    {{/if}}
                    {{/each}}
                </div>

                <div class="row mt-4">
                    {{#with form }}
                    {{#each input }}
                    <form class="col-6">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">{{label}}</label>
                            <input type="{{@key}}" class="form-control" placeholder="{{placeholder}}"
                                id="exampleInputEmail1" aria-describedby="emailHelp">
                            <div id="emailHelp" class="form-text">{{caption}}</div>
                        </div>
                    </form>
                    {{/each}}
                    <hr>
                    {{#each switch }}
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" {{#if
                            isActive}} checked {{/if}}>
                        <label class="form-check-label" for="flexSwitchCheckDefault">{{text}}</label>
                    </div>
                    {{/each}}
                    {{/with}}
                    <hr class="mt-3">
                </div>
                {{/with}}

                {{#with delivery}}
                <h4>{{title}}</h4>
                <div class="card">
                    <div class="card-body row">
                        {{#each select }}
                        <div class="col-6">
                            <label for="form-control">{{label}}</span>
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" placeholder="{{placeholder}}">
                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button"
                                        data-bs-toggle="dropdown" aria-expanded="false"></button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        {{#each options}}
                                        <li><a class="dropdown-item" href="#">{{text}}</a></li>
                                        {{/each}}
                                    </ul>
                                </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
                <div class="mt-3">
                    {{#each delivery_type }}
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1"
                            {{#if @first}} checked {{/if}}>
                        <label class="form-check-label" for="flexRadioDefault1">
                            {{type}}
                        </label>
                    </div>
                    {{/each}}
                </div>
                <hr>
                <div>
                    {{#with payment}}
                    <h4>{{title}}</h4>
                    {{#each list }}
                    <div class="form-check mt-1">
                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1"
                            {{#if @first}} checked {{/if}}>
                        <label class="form-check-label" for="flexRadioDefault1">
                            {{type}}
                        </label>
                    </div>
                    <p class="my-2">{{description}}</p>
                    {{/each}}
                    <hr>
                    {{/with}}
                </div>

                <div class="row">
                    {{#each contact}}
                    {{#if @first}}
                    <h4>{{this}}</h4>
                    {{else}}
                    <form class="col-6">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">{{label}}</label>
                            <input type="{{@key}}" class="form-control" placeholder="{{placeholder}}"
                                id="exampleInputEmail1" aria-describedby="emailHelp">
                            <div id="emailHelp" class="form-text">{{caption}}</div>
                        </div>
                    </form>
                    {{/if}}
                    {{/each}}
                </div>
                <hr>

                {{#with coment}}
                <form>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">{{label}}</label>
                        <input type="{{@key}}" class="form-control" placeholder="{{placeholder}}"
                            id="exampleInputEmail1" aria-describedby="emailHelp">
                        <div id="emailHelp" class="form-text">{{caption}}</div>
                    </div>
                </form>
                {{/with}}
                <hr>
                {{/with}}
                <div>
                    {{#with coupon}}
                    <h4>{{title}}</h4>
                    <div>
                        {{#each select}}
                        {{#if @first}}
                        <p>{{label}}</p>
                        <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                            <option selected>{{placeholder}}</option>
                            {{#each options }}
                            <option value="{{value}}">{{text}}</option>
                            {{/each}}
                        </select>
                        {{else}}
                        <p>{{label}}</p>
                        <select class="form-select form-select-sm" aria-label=".form-select-sm example">
                            <option selected>{{placeholder}}</option>
                            {{#each options }}
                            <option value="{{value}}">{{text}}</option>
                            {{/each}}
                        </select>
                        {{/if}}
                        {{/each}}
                    </div>

                    <div class="mt-5">
                        {{#each add}}
                        {{#if @first}}
                        <form>
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">{{label}}</label>
                                <input type="email" class="form-control  form-control-lg" id="exampleInputEmail1"
                                    placeholder="{{placeholder}}" aria-describedby="emailHelp">
                                <div id="emailHelp" class="form-text">{{caption}}</div>
                            </div>
                        </form>
                        {{else}}
                        <form>
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">{{label}}</label>
                                <input type="email" class="form-control form-control-sm" id="exampleInputEmail1"
                                    placeholder="{{placeholder}}" aria-describedby="emailHelp">
                                <div id="emailHelp" class="form-text">{{caption}}</div>
                            </div>
                        </form>
                        {{/if}}
                        {{/each}}
                    </div>
                    {{/with}}
                </div>
                <hr>

                <div>
                    {{#with quiz}}
                    <h3>{{title}}</h3>
                    {{#with preference}}
                    <p>{{title}}</p>
                    {{#each options }}
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1"
                            {{#if @first}} checked {{/if}}>
                        <label class="form-check-label" for="flexRadioDefault1">
                            {{this}}
                        </label>
                    </div>
                    {{/each}}
                    {{/with}}

                    <div>
                        {{#with your_expirience }}
                        <form class="mt-3">
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">{{label}}</label>
                                <input type="email" class="form-control form-control-sm" id="exampleInputEmail1"
                                    placeholder="{{placeholder}}" aria-describedby="emailHelp">
                                <div id="emailHelp" class="form-text">{{caption}}</div>
                            </div>
                        </form>
                        {{/with}}
                    </div>

                    <div>
                        {{#with purchase_frequency}}
                        <p>{{label}}</p>
                        <select class="form-select form-select-sm" aria-label=".form-select-sm example">
                            <option selected>{{placeholder}}</option>
                            {{#each options }}
                            <option value="{{value}}">{{text}}</option>
                            {{/each}}
                        </select>
                        {{/with}}
                    </div>

                    <div>
                        {{#with factors}}
                        <h3>{{title}}</h3>
                        {{#each options }}
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" {{#if
                                @first}} checked{{/if}}>
                            <label class="form-check-label" for="flexCheckDefault">
                                {{this}}
                            </label>
                        </div>
                        {{/each}}
                        {{/with}}
                    </div>
                    {{/with}}
                </div>
                     <hr>
            </div>
            {{!-- ------------------------------------------------------------------------ --}}
            <div class="col-4 ">
                <div class="card">
                    <div class="card-body">
                        {{#each action_block }}
                        {{#if isSuccess}}
                        <div class="mt-2"><a href="#" class="btn btn-success">{{text}}</a></div>
                        {{/if}}
                        {{#if isDanger}}
                        <div class="mt-2"><a href="#" class="btn btn-danger">{{text}}</a></div>
                        {{/if}}
                        {{#if isInfo}}
                        <div class="mt-2"><a href="#" class="btn btn-info">{{text}}</a></div>
                        {{/if}}
                        {{/each}}
                    </div>
                
                </div>

                <div class="card mt-3">
                    {{#with total}}
                    <div class="card-body">
                        <h5 class="card-title">{{title}}:</h5>
                        {{#each item_list }}
                        <span class="list-group-item">{{name}}: {{price}}</span>
                        {{/each}}
                        <hr>
                        {{#each additional_info}}
                        <span class="list-group-item">{{text}}: {{value}}</span>
                        {{/each}}
                        <hr>
                        {{#with total_price}}
                        <span class="list-group-item">{{text}}: {{value}}</span>
                        {{/with}}
                        <hr>
                        {{#each button}}
                        {{#if isPrimary}}
                        <button class="btn btn-primary">{{text}}</button>
                        {{else}}
                        <button class="btn btn-outline-primary mt-3">{{text}}</button>
                        {{/if}}
                        {{/each}}
                    </div>
                    {{/with}}
                </div>
            </div>
        </div>
        
    </section>
</main>