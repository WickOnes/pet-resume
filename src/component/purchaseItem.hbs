<div class="row">
    <div class="col-4">
        <p>{{number}}</p>
        <p><b>{{status}}</b></p>
    </div>

    {{#with amount }}
    <div class="col-2">
        <p>{{title}}</p>
        <p><b>{{value}}</b></p>
    </div>
    {{/with}}
    <div class="col-4">
        <div class="row">
            {{#each images }}
            <img class="col-4" src="{{this}}" alt="...">
            {{/each}}
        </div>
    </div>
    {{#with button}}
    <div class="col-2"><a href="{{link}}" class="btn btn-primary">{{text}}</a></div>
    {{/with}}
</div>
<hr>