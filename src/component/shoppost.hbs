 {{#each cards}}
            <div class="col-3">
                <div class="card">
                    <div class="card-body bg-dark text-light">
                        <h5 class="card-title">{{title}}
                            {{#if isTot}}
                            <span class="badge bg-danger">HOT</span>
                            {{/if}}
                            {{#if idNew}}
                            <span class="badge bg-success">NEW</span>
                            {{/if}}
                        </h5>
                        <p class="card-text">{{description}}</p>
                    </div>
                </div>

            </div>


            {{/each}}