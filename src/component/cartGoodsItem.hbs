 <div class="card mt-5">
            <div class="row m-0">
                <img src="{{image}}" class="img-card-top col-2 my-2" alt="...">
                <div class="card-body col-8">
                    <div class="row">
                        <div class="col-6">
                            <h5 class="card-title">{{name}}</h5>
                            <p class="card-text">{{description}}</p>
                        </div>
                        {{#with price}}
                        <div class="col-2 d-flex justify-content-center flex-column-reverse">
                            <p class="card-text">{{value}}</p>
                            <h5 class="card-title">{{title}}</h5>
                        </div>
                        {{/with}}
                        <div class="col-2 d-flex justify-content-center flex-column-reverse">
                            <h5 class="card-title">{{amount}}</h5>
                        </div>
                        <div class="col-2">
                            {{#each buttons}}
                            {{#if isPrimary}}
                            <a href="#" class="btn btn-primary mt-3">{{text}}</a>
                            {{else}}
                            <a href="#" class="btn btn-outline-danger mt-3">{{text}}</a>
                            {{/if}}
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>